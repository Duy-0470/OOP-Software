<UserControl x:Class="CamDo.UC.UCView.HomeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CamDo.UC.UCView"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="590" d:DesignWidth="800"
             d:Background="Transparent">
    <Grid>
        <Grid>
            <Grid Margin="20"
                  HorizontalAlignment="Left"
                  Width="250">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Height="90">
                            <TextBlock 
                               Text="Tiệm cầm đồ"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="30"/>
                            <TextBlock Text="Rose"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="30"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid VerticalAlignment="Bottom"
                              
                              Height="200"
                              Margin="10,10,10,40">

                            <Image Source="pack://application:,,,/Picture/Rose.png"/>

                        </Grid>
                    </Grid>

                </Grid>
                
            </Grid>

            <Grid  HorizontalAlignment="Right"
                   Width="480"
                   Margin="10,10,10,10">

                <Grid>
                    <Grid VerticalAlignment="Top"
                          HorizontalAlignment="Center"
                          Height="250"
                          Width="420"
                          Margin="20,80,40,0">

                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0"
                                  Margin="10">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0"
                                      HorizontalAlignment="Left"
                                      Margin="0,0,0,0"
                                      Width="150">

                                    <TextBlock Text="Tên tài khoản: "
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"></TextBlock>
                                    
                                </Grid>

                                <Grid Grid.Column="1"
                                      HorizontalAlignment="Right"
                                      Margin="10"
                                      Width="240">

                                    <TextBox
                                        materialDesign:HintAssist.Hint="Floating Hint"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                                </Grid>


                            </Grid>

                            <Grid Grid.Row="1"
                                  Margin="10">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0"
                                      HorizontalAlignment="Left"
                                      Margin="0,0,0,0"
                                      Width="150">

                                    <TextBlock Text="Họ tên: "
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"></TextBlock>

                                </Grid>

                                <Grid Grid.Column="1"
                                      HorizontalAlignment="Right"
                                      Margin="10"
                                      Width="240">

                                    <TextBox
                                        materialDesign:HintAssist.Hint="Floating Hint"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                                </Grid>


                            </Grid>

                            <Grid Grid.Row="2"
                                  Margin="10">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0"
                                      HorizontalAlignment="Left"
                                      Margin="0,0,0,0"
                                      Width="150">

                                    <TextBlock Text="Chức vụ: "
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"></TextBlock>

                                </Grid>

                                <Grid Grid.Column="1"
                                      HorizontalAlignment="Right"
                                      Margin="10"
                                      Width="240">

                                    <TextBox
                                        materialDesign:HintAssist.Hint="Floating Hint"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                                </Grid>


                            </Grid>

                        </Grid>
                        
                    </Grid>

                    <StackPanel VerticalAlignment="Bottom"
                                Height="145"
                                Margin="0,0,0,50">
                        
                        <Grid Height="135">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0"
                                  Width="170"
                                  Height="60"
                                  HorizontalAlignment="Center">

                                <Button Content="Cập nhật"
                                        Foreground="Black"
                                        Height="60">
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#f5c1c1" Offset="0.2"/>
                                            <GradientStop Color="#e7cfcf" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    
                                </Button>
                                
                            </Grid>

                            <Grid Grid.Column="1"
                                  Width="170"
                                  Height="60"
                                  HorizontalAlignment="Center">

                                <Button Content="Đăng xuất"
                                        Foreground="Black"
                                        Height="60">
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#f5c1c1" Offset="0.2"/>
                                            <GradientStop Color="#e7cfcf" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>

                                </Button>

                            </Grid>

                        </Grid>
                        
                    </StackPanel>
                </Grid>
                
            </Grid>
        </Grid>
    </Grid>
</UserControl>
